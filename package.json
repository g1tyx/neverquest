{
  "name": "neverquest",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "animate.css": "^4.1.1",
    "bootstrap": "^5.1.3",
    "localstorage-slim": "^2.3.0",
    "nanoid": "^4.0.0",
    "react": "^18.2.0",
    "react-bootstrap": "^2.4.0",
    "react-bootstrap-icons": "^1.8.4",
    "react-dom": "^18.2.0",
    "recoil": "^0.7.4"
  },
  "devDependencies": {
    "@types/node": "^18.0.6",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "@vitejs/plugin-react": "^2.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "stylelint": "^14.9.1",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-standard": "^26.0.0",
    "stylelint-prettier": "^2.0.0",
    "typescript": "^4.7.4",
    "vite": "^3.0.1",
    "vite-tsconfig-paths": "^3.5.0"
  },
  "lint-staged": {
    "*.css": [
      "npm run lint-styles",
      "npm run format"
    ],
    "*.{json,md}": [
      "npm run format"
    ],
    "*.{ts,tsx}": [
      "npm run lint-code",
      "npm run format"
    ]
  },
  "scripts": {
    "build": "tsc && vite build",
    "format": "prettier --write .",
    "lint-code": "eslint --fix --ext .ts,.tsx .",
    "lint-styles": "stylelint '**/*.css'",
    "prepare": "husky install",
    "start": "cross-env BROWSER=none vite"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
