{
  "name": "neverquest",
  "version": "1.0.0",
  "description": "An irreverent UI-based incremental action RPG.",
  "author": "kitnato",
  "license": "cc-by-sa-4.0",
  "homepage": "https://kitnato.github.io/neverquest",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kitnato/neverquest.git"
  },
  "type": "module",
  "private": true,
  "bugs": {
    "url": "https://github.com/kitnato/neverquest/issues"
  },
  "keywords": [
    "absurd",
    "action",
    "arpg",
    "browser",
    "clicker",
    "game",
    "incremental",
    "rogue-like",
    "rogue-lite",
    "role-playing",
    "rpg"
  ],
  "dependencies": {
    "animate.css": "4.1.1",
    "bootstrap": "5.3.2",
    "localstorage-slim": "2.7.0",
    "nanoid": "5.0.3",
    "pluralize": "8.0.0",
    "react": "18.2.0",
    "react-bootstrap": "2.9.1",
    "react-circular-progressbar": "2.1.0",
    "react-dom": "18.2.0",
    "react-markdown": "9.0.1",
    "recoil": "0.7.7",
    "sass": "1.69.5",
    "worker-timers": "7.0.77"
  },
  "devDependencies": {
    "@kitnato/eslint-config-succinct": "2.1.0",
    "@types/node": "20.9.2",
    "@types/pluralize": "0.0.33",
    "@types/react": "18.2.37",
    "@types/react-dom": "18.2.15",
    "@vitejs/plugin-react": "4.2.0",
    "eslint": "8.54.0",
    "husky": "8.0.3",
    "lint-staged": "15.1.0",
    "prettier": "3.1.0",
    "stylelint": "15.11.0",
    "stylelint-config-standard-scss": "11.1.0",
    "stylelint-prettier": "4.0.2",
    "typescript": "5.2.2",
    "vite": "5.0.0",
    "vite-plugin-checker": "0.6.2",
    "vite-plugin-svgr": "4.2.0",
    "vite-tsconfig-paths": "4.2.1"
  },
  "lint-staged": {
    "*.{json,md}": [
      "npm run lint-format"
    ],
    "*.{ts,tsx}": [
      "npm run lint-code",
      "npm run lint-format"
    ],
    "*.scss": [
      "npm run lint-styles",
      "npm run lint-format"
    ]
  },
  "scripts": {
    "build": "vite build",
    "lint-code": "eslint --fix --ext .ts,.tsx .",
    "lint-format": "prettier --write .",
    "lint-styles": "stylelint \"**/*.scss\"",
    "prepare": "husky install",
    "start": "vite"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=18",
    "npm": ">=8"
  }
}
