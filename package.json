{
  "name": "neverquest",
  "version": "1.0.0",
  "private": true,
  "author": "Chris N",
  "license": "cc-by-sa-4.0",
  "dependencies": {
    "animate.css": "4.1.1",
    "bootstrap": "5.2.3",
    "localstorage-slim": "2.4.0",
    "nanoid": "4.0.2",
    "react": "18.2.0",
    "react-bootstrap": "2.7.4",
    "react-dom": "18.2.0",
    "recoil": "0.7.7",
    "sass": "1.62.1"
  },
  "devDependencies": {
    "@cneuro/eslint-config-functional": "1.9.0",
    "@types/node": "20.1.2",
    "@types/react": "18.2.6",
    "@types/react-dom": "18.2.4",
    "@vitejs/plugin-react": "4.0.0",
    "eslint": "8.40.0",
    "husky": "8.0.3",
    "lint-staged": "13.2.2",
    "prettier": "2.8.8",
    "stylelint": "15.6.1",
    "stylelint-config-standard": "33.0.0",
    "stylelint-prettier": "3.0.0",
    "typescript": "5.0.4",
    "vite": "4.3.5",
    "vite-plugin-checker": "0.6.0",
    "vite-plugin-svgr": "3.2.0",
    "vite-tsconfig-paths": "4.2.0"
  },
  "lint-staged": {
    "*.{json,md}": [
      "npm run lint-format"
    ],
    "*.{ts,tsx}": [
      "npm run lint-code",
      "npm run lint-format"
    ],
    "*.css": [
      "npm run lint-styles",
      "npm run lint-format"
    ]
  },
  "scripts": {
    "build": "vite build",
    "lint-code": "eslint --fix --ext .ts,.tsx .",
    "lint-format": "prettier --write .",
    "lint-styles": "stylelint '**/*.css'",
    "prepare": "husky install",
    "start": "vite"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=16",
    "npm": ">=8"
  }
}
