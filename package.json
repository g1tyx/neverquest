{
  "name": "neverquest",
  "version": "0.7.0",
  "description": "An irreverent browser-based incremental action role-playing game.",
  "author": "Chris N",
  "license": "cc-by-sa-4.0",
  "homepage": "",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kitstigator/neverquest.git"
  },
  "private": true,
  "bugs": {
    "url": "https://github.com/kitstigator/neverquest/issues"
  },
  "keywords": [
    "absurd",
    "action",
    "arpg",
    "browser",
    "clicker",
    "game",
    "incremental",
    "rogue-like",
    "rogue-lite",
    "role-playing",
    "rpg"
  ],
  "dependencies": {
    "animate.css": "4.1.1",
    "bootstrap": "5.3.2",
    "localstorage-slim": "2.6.0",
    "nanoid": "5.0.2",
    "pluralize": "8.0.0",
    "react": "18.2.0",
    "react-bootstrap": "2.9.0",
    "react-circular-progressbar": "^2.1.0",
    "react-dom": "18.2.0",
    "react-markdown": "9.0.0",
    "recoil": "0.7.7",
    "sass": "1.69.4",
    "worker-timers": "7.0.77"
  },
  "devDependencies": {
    "@kitstigator/eslint-config-functional": "1.13.1",
    "@types/node": "20.8.7",
    "@types/pluralize": "0.0.32",
    "@types/react": "18.2.31",
    "@types/react-dom": "18.2.14",
    "@vitejs/plugin-react": "4.1.0",
    "eslint": "8.51.0",
    "husky": "8.0.3",
    "lint-staged": "15.0.2",
    "prettier": "3.0.3",
    "stylelint": "15.11.0",
    "stylelint-config-standard-scss": "11.0.0",
    "stylelint-prettier": "4.0.2",
    "typescript": "5.2.2",
    "vite": "4.5.0",
    "vite-plugin-checker": "0.6.2",
    "vite-plugin-svgr": "4.1.0",
    "vite-tsconfig-paths": "4.2.1"
  },
  "lint-staged": {
    "*.{json,md}": [
      "npm run lint-format"
    ],
    "*.{ts,tsx}": [
      "npm run lint-code",
      "npm run lint-format"
    ],
    "*.scss": [
      "npm run lint-styles",
      "npm run lint-format"
    ]
  },
  "scripts": {
    "build": "vite build",
    "lint-code": "eslint --fix --ext .ts,.tsx .",
    "lint-format": "prettier --write .",
    "lint-styles": "stylelint \"**/*.scss\"",
    "prepare": "husky install",
    "start": "vite"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=16",
    "npm": ">=8"
  }
}
