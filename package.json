{
  "name": "neverquest",
  "version": "1.0.0",
  "private": true,
  "license": "cc-by-sa-4.0",
  "dependencies": {
    "animate.css": "4.1.1",
    "bootstrap": "5.2.3",
    "localstorage-slim": "2.3.0",
    "nanoid": "4.0.0",
    "react": "18.2.0",
    "react-bootstrap": "2.7.0",
    "react-bootstrap-icons": "1.10.2",
    "react-dom": "18.2.0",
    "recoil": "0.7.6"
  },
  "devDependencies": {
    "@cneuro/eslint-config-alpha": "1.2.0",
    "@types/node": "18.11.17",
    "@types/react": "18.0.26",
    "@types/react-dom": "18.0.9",
    "@vitejs/plugin-react": "3.0.0",
    "eslint": "8.30.0",
    "husky": "8.0.2",
    "lint-staged": "13.1.0",
    "prettier": "2.8.1",
    "stylelint": "14.16.0",
    "stylelint-config-prettier": "9.0.4",
    "stylelint-config-standard": "29.0.0",
    "stylelint-prettier": "2.0.0",
    "typescript": "4.9.4",
    "vite": "4.0.2",
    "vite-plugin-checker": "0.5.2",
    "vite-plugin-svgr": "2.4.0",
    "vite-tsconfig-paths": "4.0.3"
  },
  "lint-staged": {
    "*.{json,md}": [
      "npm run lint-format"
    ],
    "*.{ts,tsx}": [
      "npm run lint-code",
      "npm run lint-format"
    ],
    "*.css": [
      "npm run lint-styles",
      "npm run lint-format"
    ]
  },
  "scripts": {
    "build": "vite build",
    "lint-all": "npm run lint-code && npm run lint-format",
    "lint-code": "eslint --fix --ext .ts,.tsx .",
    "lint-format": "prettier --write .",
    "lint-styles": "stylelint '**/*.css'",
    "prepare": "husky install",
    "start": "vite"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
