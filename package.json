{
  "name": "neverquest",
  "version": "0.4.1",
  "description": "An irreverent browser-based incremental action role-playing game.",
  "author": "Chris N",
  "license": "cc-by-sa-4.0",
  "homepage": "https://cneuro.github.io/neverquest",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cneuro/neverquest.git"
  },
  "private": true,
  "bugs": {
    "url": "https://github.com/cneuro/neverquest/issues"
  },
  "keywords": [
    "absurd",
    "action",
    "arpg",
    "browser",
    "clicker",
    "game",
    "incremental",
    "rogue-like",
    "rogue-lite",
    "role-playing",
    "rpg"
  ],
  "dependencies": {
    "animate.css": "4.1.1",
    "bootstrap": "5.3.1",
    "localstorage-slim": "2.4.0",
    "nanoid": "4.0.2",
    "pluralize": "^8.0.0",
    "react": "18.2.0",
    "react-bootstrap": "2.8.0",
    "react-dom": "18.2.0",
    "react-markdown": "8.0.7",
    "recoil": "0.7.7",
    "sass": "1.64.2",
    "worker-timers": "^7.0.75"
  },
  "devDependencies": {
    "@cneuro/eslint-config-functional": "1.12.1",
    "@types/node": "20.4.8",
    "@types/pluralize": "^0.0.30",
    "@types/react": "18.2.18",
    "@types/react-dom": "18.2.7",
    "@vitejs/plugin-react": "4.0.4",
    "eslint": "8.46.0",
    "husky": "8.0.3",
    "lint-staged": "13.2.3",
    "prettier": "3.0.1",
    "stylelint": "15.10.2",
    "stylelint-config-standard-scss": "10.0.0",
    "stylelint-prettier": "4.0.2",
    "typescript": "5.1.6",
    "vite": "4.4.9",
    "vite-plugin-checker": "0.6.1",
    "vite-plugin-svgr": "3.2.0",
    "vite-tsconfig-paths": "4.2.0"
  },
  "lint-staged": {
    "*.{json,md}": [
      "npm run lint-format"
    ],
    "*.{ts,tsx}": [
      "npm run lint-code",
      "npm run lint-format"
    ],
    "*.scss": [
      "npm run lint-styles",
      "npm run lint-format"
    ]
  },
  "scripts": {
    "build": "vite build",
    "lint-code": "eslint --fix --ext .ts,.tsx .",
    "lint-format": "prettier --write .",
    "lint-styles": "stylelint \"**/*.scss\"",
    "prepare": "husky install",
    "start": "vite"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "node": ">=16",
    "npm": ">=8"
  }
}
